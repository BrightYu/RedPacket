<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="开启抢红包平台">

        <com.yuhaiyang.redpacket.ui.widget.CustomSwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/settings_ic_wechat"
            android:key="KEY_ENABLE_WECHAT"
            android:title="微信" />

    </PreferenceCategory>

    <PreferenceCategory android:title="平台设置">

        <Preference
            android:key="WECHAT_SETTINGS"
            android:summary="更改抢红包模式，可以防封号"
            android:title="微信设置" />

    </PreferenceCategory>

    <PreferenceCategory android:title="高级设置">
        <com.yuhaiyang.redpacket.ui.widget.CustomSwitchPreference
            android:defaultValue="false"
            android:key="KEY_NOTIFICATION_SERVICE_TEMP_ENABLE"
            android:summary="闪电模式，抢红包更快更稳定"
            android:title="快速监听通知栏" />

        <Preference
            android:key="NOTIFY_SETTINGS"
            android:title="@string/notify_settings" />
    </PreferenceCategory>
</PreferenceScreen>